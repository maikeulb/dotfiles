[core]
	editor = nvim
	excludesfile = ~/.gitignore-global
	pager = diff-so-fancy | less --tabs=4 -RFX

[user]
	name = maikeulb
	email = michael.sergio.barnes@gmail.com

[push]
	default = tracking

[init]
	templatedir = ~/.git-templates

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = red

[difftool]
	prompt = false

[diff]
	compactionHeuristic = true
	tool = vimdiff

[rerere]
	enabled = true

[include]
	path = ~/.githubconfig

[alias]
	# abbrevs
	ad = add
	ap = add -p
	ci = commit
	cp = cherry-pick
	cl = clean
	clf = clean -df
	clo = clone
	br = branch
	co = checkout
	pl = pull
	pr = pull --rebase
	ps = push
	fe = fetch
	df = diff
	dc = diff --cached
	gdf = difftool
	gdfc = difftool --cached
	mg = merge
	gmg = mergetool
	lc = rev-list --all --count
	r = reset
	rs = reset --soft
	rh = reset --hard
	st = status -sb
	lp = log -p
	sl = stash list
	sa = stash apply
	ss = stash save

	# status
	bl = branch -av
	vu = ls-files -u                    #view unmerged files
	ls-ignored = ls-files --exclude-standard --ignored --others
	ls = ls-files

	# diffing
	diffh = diff HEAD^1..
	diffc = diff --cached
	wdiff1 = diff --word-diff=color HEAD^1.. #word-diff from last commit
	wdiff = diff --word-diff=color          #word-diff
	wdiffc = diff --word-diff=color --cached # word-diff cached
	unmerged = diff --name-only --diff-filter=U
	prestage = diff -w --word-diff=color
	precommit = diff --cached -w --word-diff=color --word-diff-regex='[^[:space:]<>]+'

	# logs
	l1 = log --max-count=1                   # last commit
	slog = log --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset | %s %Cgreen%cr%Creset %C(bold blue)[%an]%Creset' --date=relative --no-merges --abbrev-commit
	tree = log --graph --pretty=oneline --decorate --color --abbrev-commit
	tree-all = log --graph --pretty=oneline --decorate --color --abbrev-commit --all

	# undoing things
	unstage = reset -q HEAD --
	undo = reset --hard '@{1}'
	discard = checkout --
	uncommit = reset --mixed HEAD~
	nevermind = !git reset --hard HEAD && git clean -d -f

	# showing things
	branches = branch -a
	tags = tag

	# new commands
	in = incoming
	out = outgoing
	addr = addremove
	untrack = rm -r --cached
	fixup = !GIT_SEQUENCE_EDITOR=true git rebase -i --autosquash
	dotpush ="!git -C $HOME/dotfiles/ add -A && git -C $HOME/dotfiles/ commit --amend --no-edit && git -C $HOME/dotfiles/ push -f origin master"
	dotreset ="!git -C $HOME/dotfiles/ fetch origin master && git -C $HOME/dotfiles/ reset --hard FETCH_HEAD && git -C $HOME/dotfiles/ clean -df"

	# amending
	amendc = commit --amend -C HEAD
	amend = commit --amend

    files = !git diff --name-only $(git merge-base HEAD \"$REVIEW_BASE\")
    stat = !git diff --stat $(git merge-base HEAD \"$REVIEW_BASE\")
    review = !nvim -p $(git files) +\"tabdo Gdiff $REVIEW_BASE\"
    reviewone = !nvim -p +\"tabdo Gdiff $REVIEW_BASE\"

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22

[diff-so-fancy]
	stripLeadingSymbols = true

[secrets]
	patterns = password\\s*=\\s*.+
	patterns = [A-Z0-9]{64}

[format]
	pretty = oneline

[status]
	short = true

[sequence]
	editor = interactive-rebase-tool

[hub]
	protocol = https

[merge]
    tool = vimdiff
	conflictstyle = diff3

[mergetool]
    prompt = true

[mergetool "vimdiff"]
    cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
